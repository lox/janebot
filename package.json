{
  "name": "janebot",
  "version": "0.1.0",
  "description": "Slack agent powered by Pi",
  "type": "module",
  "main": "dist/index.js",
  "scripts": {
    "test": "tsx --test src/*.test.ts",
    "test:sprite": "tsx scripts/test-sprite-execution.ts",
    "repl": "tsx scripts/repl.ts",
    "dev": "tsx watch src/index.ts",
    "build": "tsc",
    "start": "node dist/index.js",
    "typecheck": "tsc --noEmit"
  },
  "dependencies": {
    "@slack/bolt": "^4.1.0",
    "dotenv": "^16.4.5",
    "md-to-slack": "^1.1.7",
    "ws": "^8.19.0"
  },
  "devDependencies": {
    "@types/node": "^22.10.0",
    "@types/ws": "^8.18.1",
    "tsx": "^4.19.0",
    "typescript": "^5.7.0"
  },
  "engines": {
    "node": ">=20"
  }
}
